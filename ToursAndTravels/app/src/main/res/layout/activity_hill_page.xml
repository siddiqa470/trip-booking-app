            <androidx.cardview.widget.CardView
                android:layout_width="270dp"
                android:layout_height="320dp"
                android:layout_marginLeft="45dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginTop="30dp"
