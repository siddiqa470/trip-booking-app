<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hbk3"
    android:layout_height="match_parent"
    tools:context=".HillPage">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hill"
        android:textColor="#6A3F36"
        android:textSize="100sp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:fontFamily="@font/lucky"
        android:layout_gravity="center"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="270dp"
                android:layout_height="320dp"
                android:layout_marginLeft="45dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                >
                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="240dp"
                    android:orientation="vertical"
                    android:background="@drawable/top_round_corners">
                    <ImageView
                        android:layout_width="270dp"
                        android:layout_height="240dp"
                        android:background="@drawable/grindelwald"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grindelwald"
                    android:fontFamily="@font/moglan"
                    android:layout_marginTop="253dp"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="280dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:textSize="18sp"
                    app:drawableLeftCompat="@drawable/location_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Switzerland"
                    android:layout_marginTop="288dp"
                    android:layout_marginLeft="30dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="10dp"
                    android:id="@+id/hill1"
                    android:layout_marginLeft="216dp"
                    android:layout_marginTop="255dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/small_arrow"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="270dp"
                android:layout_height="320dp"
                android:layout_marginLeft="45dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginTop="30dp"
                >
