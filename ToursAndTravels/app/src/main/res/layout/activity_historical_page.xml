<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rbk1"
    android:layout_height="match_parent"
    tools:context=".HistoricalPage">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heritage"
        android:textColor="#FFC5C5"
        android:textSize="70sp"
        android:gravity="center"
        android:paddingTop="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/font6"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="270dp"
                android:layout_height="320dp"
                android:layout_marginLeft="45dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                >
                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="240dp"
                    android:orientation="vertical"
                    android:background="@drawable/top_round_corners">
                    <ImageView
                        android:layout_width="270dp"
                        android:layout_height="240dp"
                        android:background="@drawable/greatwallofchina"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Great Wall of China"
                    android:fontFamily="@font/moglan"
                    android:layout_marginTop="253dp"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="280dp"
                    android:fontFamily="@font/akaya_telivigala"
                    android:textSize="18sp"
                    app:drawableLeftCompat="@drawable/location_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="China"
                    android:layout_marginTop="288dp"
                    android:layout_marginLeft="30dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="10dp"
                    android:id="@+id/historical1"
                    android:layout_marginLeft="216dp"
                    android:layout_marginTop="255dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/small_arrow"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="270dp"
                android:layout_height="320dp"
                android:layout_marginLeft="45dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginTop="30dp"
                >
                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="240dp"
                    android:orientation="vertical"
                    android:background="@drawable/top_round_corners">
                    <ImageView
                        android:layout_width="270dp"
                        android:layout_height="240dp"
                        android:background="@drawable/tajmahal"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taj Mahal"
                    android:fontFamily="@font/moglan"
