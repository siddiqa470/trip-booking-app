<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lpanema1"
    tools:context=".lpanemaBeach">
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/arrow_btn"
        android:backgroundTint="@color/white"
        android:src="@drawable/arrowback"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="35dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="-20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ipanema Beach"
                android:textSize="50sp"
                android:fontFamily="@font/font2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brazil"
                android:textSize="18sp"
                app:drawableLeftCompat="@drawable/location_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/carparking"
                    />
                <!--    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="102"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"/>-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="34dp"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/motel"
                    />
                <!-- <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Free Wifi"
                     android:textSize="15sp"
                     android:layout_marginLeft="5sp"
                     android:layout_marginTop="18dp"/>-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="34dp"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/lifegaurd"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="34dp"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/food"
                    />
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:textSize="15sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="20dp"/>-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="34dp"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/toilet"
                    />
            </LinearLayout>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="4"
                android:rating="2.5"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ipanema Beach, located in Rio de Janeiro, Brazil, is a world-renowned stretch of golden sand known for its vibrant atmosphere and stunning backdrop of mountains. This iconic beach attracts visitors from around the globe with its lively energy, diverse crowd, and array of activities. From sunbathing and swimming in the refreshing waters of the Atlantic Ocean to playing beach volleyball and indulging in refreshments from beachside kiosks, Ipanema offers endless opportunities for relaxation and entertainment."
                android:textSize="15sp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>


            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:text="$234"
                    android:background="#AAD7D9"
                    android:backgroundTint="#FFB996"
                    android:textSize="20sp"/>
                <Button
                    android:layout_width="181dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp"
                    android:text="Book a Tour"
                    android:background="#AAD7D9"
                    android:backgroundTint="#FFB996"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>