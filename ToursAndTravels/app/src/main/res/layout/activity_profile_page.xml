<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">
   <ImageView
       android:layout_width="match_parent"
       android:layout_height="230dp"
       android:id="@+id/imgvw"
       android:background="@drawable/top_background"/>
   <TextView
       android:id="@+id/acc_txt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Account Info"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:textSize="24sp"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="20dp"/>
   <ImageButton
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_alignParentRight="true"
       android:background="@drawable/edit"
       android:layout_marginRight="19dp"
       android:layout_marginTop="20dp"
       />
   <androidx.cardview.widget.CardView
       android:layout_width="80dp"
       android:layout_height="80dp"
       android:layout_below="@id/acc_txt"
       android:layout_marginTop="20dp"
       app:cardCornerRadius="40dp"
       android:id="@+id/cd"
       android:layout_centerHorizontal="true">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="25sp"
         android:id="@+id/userShortName"
          android:layout_marginTop="25dp"
          android:layout_marginLeft="25dp"/>

   </androidx.cardview.widget.CardView>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/username"
       android:textSize="25sp"
       android:textColor="@color/black"
       android:layout_below="@id/cd"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"/>

   <TextView
       android:id="@+id/txt1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Your Name : "
       android:textSize="15sp"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="30dp"
       android:layout_below="@id/imgvw"
       />
   <EditText
       android:id="@+id/name_edittxt"
       android:layout_width="280dp"
       android:layout_height="50dp"
       android:background="@drawable/register_custom_button"

       android:textColor="#d3d3d3"
       android:layout_below="@id/txt1"
       android:layout_marginTop="8dp"
       android:paddingLeft="20dp"
       android:layout_marginLeft="40dp"
       />
   <TextView
       android:id="@+id/txt2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Your Email : "
       android:textSize="15sp"
       android:layout_below="@id/name_edittxt"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="30dp"
       />
   <EditText
       android:id="@+id/email_edittxt"
       android:layout_width="290dp"
       android:layout_height="50dp"
       android:background="@drawable/register_custom_button"

       android:textColor="#d3d3d3"
       android:layout_below="@id/txt2"
       android:layout_marginTop="8dp"
       android:paddingLeft="15dp"
       android:layout_marginLeft="40dp"

       />
   <TextView
       android:id="@+id/txt3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Your Contact : "
       android:textSize="15sp"
       android:layout_below="@id/email_edittxt"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="30dp"
       />
   <EditText
       android:id="@+id/contact_edittxt"
       android:layout_width="290dp"
       android:layout_height="50dp"
       android:background="@drawable/register_custom_button"

       android:textColor="#d3d3d3"
       android:layout_below="@id/txt3"
       android:layout_marginTop="8dp"
       android:paddingLeft="20dp"
       android:layout_marginLeft="40dp"
       />
   <TextView
       android:id="@+id/txt4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Your Password : "
       android:textSize="15sp"
       android:layout_below="@id/contact_edittxt"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="30dp"
       />
   <EditText
       android:id="@+id/passwd_edittxt"
       android:layout_width="290dp"
       android:layout_height="50dp"
       android:background="@drawable/register_custom_button"

       android:textColor="#d3d3d3"
       android:layout_below="@id/txt4"
       android:layout_marginTop="8dp"
       android:paddingLeft="20dp"
       android:layout_marginLeft="40dp"
       />
   <Button
       android:id="@+id/update_info"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/passwd_edittxt"
       android:layout_marginTop="10dp"
       android:text="Update"
       android:textSize="25sp"
       android:layout_centerHorizontal="true"/>

</RelativeLayout>