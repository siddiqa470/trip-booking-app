                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="10dp"
                    android:id="@+id/island1"
                    android:layout_marginLeft="216dp"
                    android:layout_marginTop="255dp">
