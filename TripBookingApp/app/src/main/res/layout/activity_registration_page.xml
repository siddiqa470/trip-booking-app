<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registration_page">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@drawable/regimg1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="-15dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/travel_icon"
            android:layout_marginEnd="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create\nAccount"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_marginTop="-15dp"
        >
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name : "
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/name_edittxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/register_custom_button"
            android:hint="Enter Your Name "
            android:textColor="@color/black"
            android:layout_below="@id/txt1"
            android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Email : "
            android:textSize="15sp"
            android:layout_below="@id/name_edittxt"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/email_edittxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/register_custom_button"
            android:hint="Enter Your Email "
            android:textColor="@color/black"
            android:layout_below="@id/txt2"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp"
            />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Contact : "
            android:textSize="15sp"
            android:layout_below="@id/email_edittxt"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/contact_edittxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/register_custom_button"
            android:hint="Enter Your Contact "
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_below="@id/txt3"
            android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            />
        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Password : "
            android:textSize="15sp"
            android:layout_below="@id/contact_edittxt"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/passwd_edittxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/register_custom_button"
            android:hint="Enter Your Password "
            android:textColor="@color/black"
            android:layout_below="@id/txt4"
            android:layout_marginTop="8dp"
            android:paddingLeft="20dp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/signUp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background_blue"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />
</LinearLayout>
