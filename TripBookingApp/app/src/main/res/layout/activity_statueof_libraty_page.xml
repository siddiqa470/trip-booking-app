<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statueofLibratyPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/st"/>
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="23dp"
                android:background="@drawable/arrow_btn"
                android:backgroundTint="@color/white"
                android:src="@drawable/arrowback"/>
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="48dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="300dp"
                android:background="@drawable/myfav"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statue of Libraty"
            android:fontFamily="@font/font2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/cardView"
            android:textSize="48sp"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NYC, United States"
            android:textSize="15sp"
            android:fontFamily="@font/font10"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="28dp"
            android:layout_below="@id/txt1"
            app:drawableLeftCompat="@drawable/location_icon" />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="22dp"
            android:layout_below="@id/txt2"
            android:layout_marginRight="10dp"
            android:text="Bora Bora, nestled in the heart of French Polynesia, is a world-renowned tropical paradise famed for its stunning turquoise lagoon, lush greenery, and iconic overwater bungalows. Surrounded by a protective coral reef."
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/more_imgtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Images"
            android:textSize="24sp"
            android:layout_below="@id/txt3"
            android:fontFamily="@font/font10"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/hsrlvw"
            android:layout_marginTop="358dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="12dp"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:background="@drawable/statueliberty"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:background="@drawable/s1"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:background="@drawable/s2"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:background="@drawable/s5"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="10dp">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:background="@drawable/s4"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
        <ImageView
            android:id="@+id/tipLogo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/hsrlvw"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/lightbulb"/>
        <TextView
            android:id="@+id/tip_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/kingsman"
            android:layout_toRightOf="@id/tipLogo"
            android:layout_alignTop="@id/tipLogo"
            android:textSize="33sp"/>

        <ImageView
            android:id="@+id/bullet1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/tip_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/arrowlisting"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/bullet1"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/bullet1"
            android:text="Explore the gift shops on Liberty Island for unique souvenirs and memorabilia. Support the National Park Service by purchasing items like books, postcards, and replica statues to commemorate your visit."/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/bullet2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_below="@id/bullet1"
            android:background="@drawable/arrowlisting"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/bullet2"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/bullet2"
            android:text="Take time to pause and reflect on the symbolism of the Statue of Liberty as a beacon of freedom and hope."
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/bullet3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="38dp"
            android:layout_below="@id/bullet2"
            android:background="@drawable/arrowlisting"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/bullet3"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/bullet3"
            android:text="Begin your tour at historic Castle Clinton in Battery Park."
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/margintop"
            android:layout_marginTop="1070dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$234"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:textSize="30sp"/>
            <Button
                android:layout_width="190dp"
                android:layout_height="56dp"
                android:text="Book A Tour"
                android:background="@drawable/hill_borderradius"
                android:layout_marginTop="2dp"
                android:id="@+id/bookplace"
                android:layout_marginLeft="46dp"
                android:fontFamily="@font/font7"
                android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>